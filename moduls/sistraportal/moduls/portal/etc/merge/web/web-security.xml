<security-constraint>
    <web-resource-collection>
        <web-resource-name>sistraportal</web-resource-name>
        <url-pattern>/protected/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>@role.todos@</role-name>
    </auth-constraint>
</security-constraint>

<login-config>
    <auth-method>FORM</auth-method>
    <realm-name><![CDATA[TEMPLATE portal]]></realm-name>
