<?xml version="1.0" encoding="UTF-8"?>
<project name="ClientePagos - WSDL2JAVA" basedir=".">

	<property name="lib.dir" location="${basedir}../../../../../lib" />
	<property name="wsdl.dir" location="${basedir}/wsdl" />
	<property name="generated.dir" location="${basedir}/src" />
	<property name="package.wsdl" value="es.caib.pagos.services.wsdl"/>

	<path id="jar.class.path">
		<fileset dir="${lib.dir}">
			
			<!-- LIBS AXIS 1.4 	-->
			<include name="axis14/axis.jar" />			
			
			<!-- JAX RPC JBOSS -->
			<include name="jboss/jboss-jaxrpc.jar" />
			<include name="jboss/jboss-saaj.jar" />
			
			<!-- Tarea ant wsdl -->
			<include name="axis-ant.jar" />

			<!-- Commons -->
			<include name="commons-logging*.jar" />
			<include name="commons-discovery*.jar" />
			
			<include name="activation.jar" />
			<include name="mail.jar" />
			<include name="wsdl4j-1.6.2.jar" />
			
		</fileset>
	</path>

	<taskdef resource="axis-tasks.properties" classpathref="jar.class.path" />

	<target name="WSDL2JAVA" description="WSDL2JAVA">
		<axis-wsdl2java output="${generated.dir}" testcase="false" verbose="true" all="true" url="file:${wsdl.dir}/${wsdl}">
			<mapping namespace="${namespace}" package="${package}" />
		</axis-wsdl2java>
	</target>

	<target name="PAGOS" description="PAGOS">
		<antcall target="WSDL2JAVA">
			<param name="wsdl" value="pagos.wsdl" />
			<param name="namespace" value="http://atib.es/" />
			<param name="package" value="${package.wsdl}" />
		</antcall>
	</target>
		
</project>
