<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
          "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>

    <!-- Main Layout -->
    <definition
        name=".mainLayout"
        path="/layout/mainLayout.jsp">
        <put name="header" value="/moduls/header.jsp"/>
        <put name="main" value=""/>
        <put name="footer" value="/moduls/footer.jsp"/>
    </definition>
        
    <!-- Pantalla de pago -->
    <definition
    	name=".pago"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pago.jsp" />
    </definition>	
    
	 <!-- Pantalla de pago telematico-->
    <definition
    	name=".pagoTelematico"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pagoTelematico.jsp" />
    </definition>	
    
    <!-- Pantalla de pago tarjeta-->
    <definition
    	name=".pagoTarjeta"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pagoTarjeta.jsp" />
    </definition>	
    
    <!-- Pantalla de pago banca-->
    <definition
    	name=".pagoBanca"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pagoBanca.jsp" />
    </definition>
    
   	 <!-- Pantalla de pago presencial -->
    <definition
    	name=".pagoPresencial"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pagoPresencial.jsp" />
    </definition>	
    
    
    <!-- Pantalla de pago finalizado-->
    <definition
    	name=".pagoFinalizado"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pagoFinalizado.jsp" />
    </definition>
    
     <!-- Pantalla de pago tiempo excedido-->
    <definition
    	name=".pagoTiempoExcedido"	
    	extends=".mainLayout"
    	controller="es.caib.pagos.front.controller.DatosPagoController">
    	<put name="main" value="/pages/pagoTiempoExcedido.jsp" />
    </definition>
    
	<!--  configuraciones de mensajes y errores -->    	 
   	 <definition
    	name=".mensaje"
    	extends=".mainLayout" 
    	controller="es.caib.pagos.front.controller.MensajeController">
    	<put name="main" value="/pages/mensaje.jsp" />
    	<put name="subtitulo" value="" />
    	<put name="texto" value="" />
    </definition>
    
   	<definition
    	name=".error"
    	extends=".mensaje">
    	<put name="main" value="/pages/mensaje.jsp" />
    	<put name="subtitulo" value="subtitulo.errorGenerico" />
    	<put name="texto" value="texto.errorGenerico" />
    </definition>
    	
</tiles-definitions>


