<?xml version="1.0" encoding="UTF-8"?>
<project name="buildClientRegweb" basedir="." default="main">

	<property name="home.dir" location="${basedir}/../../../"/>
	<property name="output.dir" location="${home.dir}/output"/>
	<property name="cxf.home" location ="${home.dir}/../../lib/cxf"/>
	<property name="src.dir" location="${basedir}/../src"/>
	<property name="wsdl.dir" location="${basedir}/../wsdl"/>
	<property name="lib" value="${home.dir}/../../lib" />

	<path id="cxf.classpath">
		<fileset dir="${cxf.home}">
			<include name="*.jar"/>
		</fileset>
		<fileset dir="${lib}">
			<include name="*.jar" />
			<exclude name="xerces*.jar"/>
		</fileset>
		<fileset dir="${lib}/jaxb">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="main">
		<echo>
			Para generar el cliente de una determinada versiÃ³n hay que lanzar la tarea correspondiente	
		</echo>
	</target>

	<target name="clienteV1">
		<java classname="org.apache.cxf.tools.wsdlto.WSDLToJava" fork="true">

			<arg value="-p"/>
			<arg value="urn:es:caib:regweb:ws:v1:services=es.caib.regtel.plugincaib.ws.services" />
			<arg value="-p" />
			<arg value="urn:es:caib:regweb:ws:v1:model:ParametrosRegistroEntradaWS=es.caib.regtel.plugincaib.ws.model" />
			<arg value="-p" />
			<arg value="urn:es:caib:regweb:ws:v1:model:ParametrosRegistroSalidaWS=es.caib.regtel.plugincaib.ws.model" />
			<arg value="-p" />
			<arg value="urn:es:caib:regweb:ws:v1:model:RegwebFacade=es.caib.regtel.plugincaib.ws.model" />

			<arg value="-d" />
			<arg value="${src.dir}" />
			
			
			<!-- Metemos wsdllocation pero luego no se utiliza. Evitamos que se genere automaticamente con ruta local -->
			<arg value="-wsdlLocation" />
			<arg value="RegwebFacade.wsdl" />
			
			<arg value="${wsdl.dir}/RegwebFacade.wsdl" />
			<classpath>
				<path refid="cxf.classpath"/>
			</classpath>
		</java>
	</target>
</project>
